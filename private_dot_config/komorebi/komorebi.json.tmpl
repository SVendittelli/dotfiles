{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "border": false,
  "border_width": 0,
  "border_offset": -1,
  "theme": {
    "palette": "Base16",
    "name": "TokyoNightTerminalDark",
    "bar_accent": "Base0D"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "{{ template "komorebi_layout" . }}"
        },
        {
          "name": "II",
          "layout": "{{ template "komorebi_layout" . }}"
        },
        {
          "name": "III",
          "layout": "{{ template "komorebi_layout" . }}"
        },
        {
          "name": "IV",
          "layout": "{{ template "komorebi_layout" . }}"
        },
        {
          "name": "V",
          "layout": "{{ template "komorebi_layout" . }}"
        }
      ]
    }
  ]
}
