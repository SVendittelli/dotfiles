import = [
    "~/.themes/tokyonight.nvim/extras/alacritty/tokyonight_night.toml"
]

working_directory = {{ .chezmoi.homeDir | quote }}

{{ if eq .chezmoi.os "windows" -}}
[shell]
program = "pwsh"
{{- end }}

[window]
decorations = "None"
opacity = 0.9
blur = true
option_as_alt = "Both"

[window.padding]
x = 5
y = 5

[font.normal]
family = {{ .font | quote }}

[cursor.style]
shape = "Beam"
blinking = "On"

