set shell := ["zsh", "-uc"]
set windows-shell := ["pwsh.exe", "-NoLogo", "-Command"]

[private]
@default:
    just --list --justfile {{justfile()}}

# Create a new justfile in the current directory from the template
[no-cd]
init:
    cp {{justfile_directory()}}/init_template.just justfile

alias kst := komo-start
alias ksp := komo-stop

# Start komorebi and whkd
[no-cd]
komo-start:
    komorebic start --whkd

# Stop komorebi
[no-cd]
komo-stop:
    komorebic stop
