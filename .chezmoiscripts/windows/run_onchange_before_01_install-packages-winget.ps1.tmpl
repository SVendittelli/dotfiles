{{ if eq .chezmoi.os "windows" -}}

{{- if lookPath "winget" }}
Write-Host ""
Write-Host "Installing winget packages..."
Write-Host ""

$WingetTempFile = New-TemporaryFile

@'
{
    "$schema" : "https://aka.ms/winget-packages.schema.2.0.json",
    "Sources" :
    [
        {
            "Packages" :
            [
{{- range .packages.windows.winget }}
                {
                    "PackageIdentifier" : {{ . | quote }}
                },
{{- end }}
{{- if .personal }}
{{- range .packagesPersonal.windows.winget }}
                {
                    "PackageIdentifier" : {{ . | quote }}
                },
{{- end }}
{{- end }}
            ],
            "SourceDetails" :
            {
                "Argument" : "https://cdn.winget.microsoft.com/cache",
                "Identifier" : "Microsoft.Winget.Source_8wekyb3d8bbwe",
                "Name" : "winget",
                "Type" : "Microsoft.PreIndexed.Package"
            }
        },
        {
            "Packages" :
            [
{{- range .packages.windows.msstore }}
                {
                    "PackageIdentifier" : {{ . | quote }}
                },
{{- end }}
{{- if .personal }}
{{- range .packagesPersonal.windows.msstore }}
                {
                    "PackageIdentifier" : {{ . | quote }}
                },
{{- end }}
{{- end }}
            ],
            "SourceDetails" :
            {
                "Argument" : "https://storeedgefd.dsx.mp.microsoft.com/v9.0",
                "Identifier" : "StoreEdgeFD",
                "Name" : "msstore",
                "Type" : "Microsoft.Rest"
            }
        }
    ]
}
'@ | Out-File $WingetTempFile

winget import -i $WingetTempFile --ignore-unavailable --no-upgrade --accept-package-agreements

Remove-Item $WingetTempFile
{{- end }}

{{ end -}}

